<%= form_for(@comment) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: "Add a comment..." %>
    <%= f.hidden_field :review_id, :value => params['id'] %>
  </div>
  <%= f.submit "Post", class: "btn btn-primary" %>
<% end %>
