<%= form_for Review.new do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_field :title, placeholder: "Title your review..." %>
    <%= f.text_area :content, placeholder: "Add your review..." %>
    <%= f.hidden_field :meal_id, :value => params['id'] %>
  </div>
  <%= f.submit "Post", class: "btn btn-primary" %>
<% end %>
